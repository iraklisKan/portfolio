{
  "portfolio": {
    "name": "Iraklis Kanarkotis Portfolio",
    "version": "2.0.0",
    "description": "Refactored portfolio website with modular architecture",
    "author": "Iraklis Kanarkotis",
    "refactored": "2025-07-20"
  },
  "architecture": {
    "css": {
      "methodology": "BEM-inspired with utility classes",
      "files": [
        "css/styles.css",
        "css/navigation.css", 
        "css/hero.css",
        "css/about.css",
        "css/skills.css",
        "css/projects.css",
        "css/contact.css",
        "css/responsive.css"
      ],
      "variables": {
        "colors": {
          "primary": "#2563eb",
          "secondary": "#60a5fa", 
          "accent": "#3b82f6"
        },
        "spacing": {
          "borderRadius": "20px",
          "containerPadding": "20px"
        },
        "animations": {
          "transition": "all 0.4s cubic-bezier(0.4, 0, 0.2, 1)"
        }
      }
    },
    "javascript": {
      "pattern": "Module Pattern",
      "modules": [
        "navigation",
        "animations", 
        "effects",
        "performance",
        "utils"
      ],
      "features": [
        "throttled scroll events",
        "intersection observer",
        "dynamic particles",
        "custom cursor",
        "mobile optimization",
        "accessibility support"
      ]
    }
  },
  "performance": {
    "css": {
      "reduction": "70% redundancy removed",
      "optimization": "modular loading",
      "caching": "improved with separated files"
    },
    "javascript": {
      "scrollEvents": "throttled to 60fps",
      "resizeEvents": "debounced 250ms",
      "monitoring": "built-in FPS tracking",
      "memoryManagement": "proper cleanup"
    }
  },
  "responsive": {
    "breakpoints": {
      "mobile": "768px",
      "tablet": "1024px", 
      "desktop": "1400px"
    },
    "strategy": "mobile-first with progressive enhancement"
  },
  "browser_support": {
    "minimum": {
      "chrome": "60+",
      "firefox": "55+",
      "safari": "12+",
      "edge": "79+"
    },
    "features": [
      "CSS Grid",
      "CSS Custom Properties",
      "Intersection Observer",
      "ES6+ JavaScript"
    ]
  },
  "future_enhancements": [
    "React/Vue component conversion",
    "Build process with Webpack/Vite",
    "Unit testing framework",
    "Advanced accessibility features",
    "Theme toggle functionality",
    "Analytics integration"
  ]
}
